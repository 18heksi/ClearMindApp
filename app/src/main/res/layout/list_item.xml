<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorMain">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:contentPaddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorPutih">

        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/circle_wind"
                android:id="@+id/gambar"
                android:layout_width="110dp"
                android:layout_height="80dp" />

            <TextView
                android:textAppearance="@color/cardview_shadow_end_color"
                android:id="@+id/pilihan"
                android:paddingTop="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="7dp"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Judul Lagu"
                android:textSize="20dp"
                android:background="@color/colorPutih"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>